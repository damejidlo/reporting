{
	"name": "damejidlo/reporting",
	"type": "library",
	"description": "Library for creating and running parametrized SQL reports.",
	"license": "proprietary",

	"require": {
		"php": "^7.1",
		"doctrine/dbal": "^2.5",
		"nette/utils": "^2.4"
	},

	"require-dev": {
		"nette/tester": "^1.7",
		"mockery/mockery": "^1.0",
		"damejidlo/coding-standard": "^0.8",
		"phpstan/phpstan-shim": "^0.10",
		"phpstan/phpstan-nette": "^0.10"
	},

	"autoload": {
		"psr-4": {
			"Damejidlo\\Reporting\\": "src/"
		},
		"classmap": [
			"src/exceptions.php",
			"src/Query/exceptions.php",
			"src/Query/Parameter/exceptions.php"
		]
	}

